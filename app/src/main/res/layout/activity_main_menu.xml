<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#E9EDF3"
    tools:context="fr.clemencealthabegoity.dis.MainMenuActivity">

    <ImageView
        android:clickable="true"
        android:onClick="onclick_timer"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="30dp"
        android:id="@+id/button_timer"
        android:src="@mipmap/timerbutton" />

    <ImageView
        android:clickable="true"
        android:onClick="onclick_start"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_start"
        android:layout_above="@id/button_timer"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/startbutton" />

    <ImageView
        android:clickable="true"
        android:onClick="onclick_about"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_about"
        android:layout_centerHorizontal="true"
    android:layout_below="@id/button_timer"
        android:src="@mipmap/aboutbutton" />



    <ImageView
        android:clickable="true"
        android:onClick="onclick_info"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/questionbutton"
        android:src="@mipmap/questionbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
