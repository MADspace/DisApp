<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/disconnected_background"
    android:background="#bfdaff"
    tools:context="fr.clemencealthabegoity.dis.MainMenuActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/gradientbackground"
        android:id="@+id/sun" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_margin="60dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/annoucement"
        android:id="@+id/disconnected_text"
        />

</RelativeLayout>