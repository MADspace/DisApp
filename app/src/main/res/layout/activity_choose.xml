<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#E9EDF3"
    tools:context="fr.clemencealthabegoity.dis.ChooseActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="60dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/text_activity"/>

    <!-- Centers -->
    <ImageView
        android:layout_width="@dimen/activity_balls_size"
        android:layout_height="@dimen/activity_balls_size"
        android:layout_centerInParent="true"
        android:id="@+id/chill"
        android:layout_margin="@dimen/activity_balls"
        android:src="@mipmap/activity_chill"/>

    <ImageView
        android:layout_width="@dimen/activity_balls_size"
        android:layout_height="@dimen/activity_balls_size"
        android:layout_below="@id/chill"
        android:id="@+id/cook"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_balls"
        android:src="@mipmap/activity_cook"/>

    <ImageView
        android:layout_width="@dimen/activity_balls_size"
        android:layout_height="@dimen/activity_balls_size"
        android:layout_centerHorizontal="true"
        android:id="@+id/work"
        android:layout_above="@id/chill"
        android:layout_margin="@dimen/activity_balls"
        android:src="@mipmap/activity_work"/>

    <!-- Centers baseline -->

    <ImageView
        android:layout_width="@dimen/activity_balls_size"
        android:layout_height="@dimen/activity_balls_size"
        android:layout_toLeftOf="@id/chill"
        android:layout_centerVertical="true"
        android:id="@+id/meet"
        android:layout_margin="@dimen/activity_balls"
        android:src="@mipmap/activity_meet"/>

    <ImageView
        android:layout_width="@dimen/activity_balls_size"
        android:layout_height="@dimen/activity_balls_size"
        android:layout_toRightOf="@id/chill"
        android:layout_centerVertical="true"
        android:id="@+id/sport"
        android:layout_margin="@dimen/activity_balls"
        android:src="@mipmap/activity_sport"/>

    <!-- Corners -->
    <ImageView
        android:layout_width="@dimen/activity_balls_size"
        android:layout_height="@dimen/activity_balls_size"
        android:layout_toLeftOf="@id/work"
        android:layout_above="@id/meet"
        android:layout_margin="@dimen/activity_balls"
        android:src="@mipmap/activity_lunch"/>

    <ImageView
    android:layout_width="@dimen/activity_balls_size"
    android:layout_height="@dimen/activity_balls_size"
    android:layout_toRightOf="@id/work"
    android:layout_above="@id/sport"
        android:layout_margin="@dimen/activity_balls"
    android:src="@mipmap/activity_sleep"/>

    <ImageView
        android:layout_width="@dimen/activity_balls_size"
        android:layout_height="@dimen/activity_balls_size"
        android:layout_toLeftOf="@id/cook"
        android:layout_below="@id/meet"
        android:layout_margin="@dimen/activity_balls"
        android:src="@mipmap/activity_dinner"/>

    <ImageView
        android:layout_width="@dimen/activity_balls_size"
        android:layout_height="@dimen/activity_balls_size"
        android:layout_toRightOf="@id/cook"
        android:layout_below="@id/sport"
        android:id="@+id/read"
        android:layout_margin="@dimen/activity_balls"
        android:src="@mipmap/activity_read"/>

    <!-- Other -->

    <ImageView
        android:layout_width="@dimen/activity_balls_size"
        android:layout_height="@dimen/activity_balls_size"
        android:layout_toRightOf="@id/cook"
        android:layout_below="@id/read"
        android:layout_margin="@dimen/activity_balls"
        android:src="@mipmap/activity_other"/>

    <!-- Skip -->

    <ImageView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/activity_export"/>

</RelativeLayout>
